<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/bklogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/info"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/register_information"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_username_info"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_username_hint"
            android:inputType="textEmailAddress"
            android:id="@+id/edtUsername"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_email_info"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_email_hint"
            android:inputType="textEmailAddress"
            android:id="@+id/edtEmail"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_password_info"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_password_hint"
            android:id="@+id/edtPassword"
            android:inputType="textPassword"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_fullname_info"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_fullname_hint"
            android:inputType="text"
            android:id="@+id/edtHoten"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_phone_info"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_phone_hint"
            android:inputType="phone"
            android:id="@+id/edtSodienthoai"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_address_info"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_address_hint"
            android:id="@+id/edtDiachi"
            android:inputType="text"

            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAllCaps="false"
            android:text="@string/register_btn"
            android:background="@drawable/custombutton"
            android:id="@+id/btnDangky"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"

            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_txt_login"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_button_login"
                android:id="@+id/twDangnhap"
                android:textColor="#000080"
                android:textStyle="italic"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>

