<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".User.line_muon_sach">

    <TextView
        android:id="@+id/ms_name"
        android:layout_width="216dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:text="Nguyên lí ngôn ngữ lập trình"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ms_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ms_img"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bookex" />

    <ImageView
        android:id="@+id/ms_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/ms_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />
</android.support.constraint.ConstraintLayout>